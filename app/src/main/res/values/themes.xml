<resources>
    <!-- Base application theme. -->
    <style name="Theme.TrainApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="TextEdit" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="TextEdit.TextInputEditText" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
        <item name="android:actionMenuTextColor">@color/blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">"@color/white"</item>
    </style>

</resources>